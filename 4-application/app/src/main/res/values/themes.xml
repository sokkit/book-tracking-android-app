<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mobdevportfolio" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
<!--        <item name="android:windowBackground">@color/black</item>-->
        <!-- Primary brand color. -->
<!--        buttons and nav bar selected color-->
        <item name="colorPrimary">@color/nav_color</item>
<!--        top toolbar colour-->
        <item name="colorPrimaryVariant">@color/nav_color</item>
<!--        button text colour-->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <!--        rating star colour and top of calendar-->
        <item name="colorSecondary">#51AC6F</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
</resources>